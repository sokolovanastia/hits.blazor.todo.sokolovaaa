@page "/"


<PageTitle>задачи</PageTitle>

<h1>Мои задачи</h1>

 <table class="table table-bordered">
      <thead> 
		  <tr>
		<th> ИД </th>
        <th> Заголовок </th>
        <th> Описание </th>
        <th> Создано </th>
        <th> Завершено </th>
		</tr>
	</thead>
<tbody>

@foreach ( var task in tasks)
{
	<tr>
			<td>@task.Id</td>
	        <td>@task.Title</td>
	        <td>@task.Description</td>
        	<td>@task.CreatedDate</td>
	        <td>@task.FinishDate</td>
	</tr>

}
</tbody>
     </table>

